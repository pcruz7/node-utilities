{
    "env": {
        "node": true
    },
    "globals": {
        "pathRequire": true
    },
    "rules": {
        "quotes": [2, "single", "avoid-escape"],
        "strict": [1, "global"],
        "key-spacing": [2, { align: "value" }],
        "space-after-keywords": [2, "always"],
        "no-multi-spaces": [1, {
            "exceptions": {
                "VariableDeclarator": true
            }
        }]
    }
}
